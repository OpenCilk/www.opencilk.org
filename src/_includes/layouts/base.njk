<html lang="{{ site.lang}}">
  {% include 'partials/header.njk' %}
  <body class="thumb d-flex flex-column vh-100">
    {% include 'partials/navbar.njk' %}
    {% set mainWhite = false %}
    <div class="row justify-content-between">
      {% if sidebar != 'none' %}
        {% set mainWhite = true %}
        <div id="sidebar" class="d-flex flex-column overflow-auto flex-shrink-0 p-3" style="margin-left: 1em; width: 280px; border-right-width: 2; border-right-style: solid; border-color: var(--lime);">
          {% set navPages = ['Blog', 'Documentation', 'Community', 'Contribute'] %}
          {% if eleventyNavigation.key in navPages %}
            {% set context = eleventyNavigation.key %}
          {% else %}
            {% set context = eleventyNavigation.parent %}
          {% endif %}
          <h5>{{ context }}</h5>
          <div class="list-group ps-3 sticky-top sticky-offset" style="margin-left: -2em;">
            {{ collections.all | eleventyNavigation(context) | eleventyNavigationToHtml | safe }}
          </div>
        </div>      
      {% endif %}
      <div class="col mx-0 px-0">
        <main class="pt-3 px-4 {% if mainWhite %} bg-white {% endif %}">
          {% if page.url != "/" %}
            <small>
              {% if eleventyNavigation.key %}
                {% set crumbPages = collections.all | eleventyNavigationBreadcrumb( eleventyNavigation.key ) %}
                <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                {%- for entry in crumbPages %}
                    <li class="breadcrumb-item">
                        <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                    </li>
                {%- endfor %}
                <li class="breadcrumb-item active" aria-current="page">
                    {{ title }}
                </li>
                </ol>
                </nav>
              {% endif %}
            </small>
          {% endif %}
          {{ content | safe }}
        </main>
      </div>
      {% if sidebar != 'none' %}
      <div id="sidebar" class="d-flex flex-column flex-shrink-0 p-3" style="width: 280px; border-left-width: 2; border-left-style: solid; border-color: var(--lime);">
        <h5>On this page</h5>
        <div class="list-group ps-3 sticky-top sticky-offset" style="margin-left: -2em;">
          {{ content | toc | safe }}
        </div>
      </div>
      {% endif %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script async src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous"></script>
  </body>
</html>
