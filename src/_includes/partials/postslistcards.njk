<section class="not-prose mt-12">
  <div class="relative pb-12 lg:pb-16 ">
    <div class="relative mx-auto max-w-7xl">
      <div class="grid gap-8 mx-auto mt-12 md:grid-cols-2 lg:max-w-none">
        {% for post in postslist %}

          <div class="flex flex-col p-4 border border-grey-600 overflow-hidden rounded-lg shadow-lg hover:border-cilk-pink hover:bg-cilk-pink hover:bg-opacity-5">
            <div class="flex-shrink-0">
              <a class="flex place-content-center" href="{{ post.url | url }}">
                <img class="{{ post.data.images.align }} h-20" src={% if post.data.thumbnail %}"/static/img/{{ post.data.thumbnail }}"{% else %}"/static/img/trace-dag.png"{% endif %} alt="{{ title }} Thumbnail">
              </a>
            </div>
            <div class="flex flex-col justify-between flex-1">
              {% include "partials/postdata.njk" %}
            </div>
          </div>

        {% endfor %}
      </div>
    </div>
  </div>
</section>