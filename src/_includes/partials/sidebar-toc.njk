
<div id="sidebar" class="d-flex flex-column flex-shrink-0 p-3" style="margin-left: 1em; width: 280px; border-right-width: 2; border-right-style: solid; border-color: var(--lime);">
    {% set navPages = ['Blog', 'Documentation', 'Community', 'Contribute'] %}
    {% if eleventyNavigation.key in navPages %}
    {% set context = eleventyNavigation.key %}
    {% else %}
    {% set context = eleventyNavigation.parent %}
    {% endif %}
    <h5>
    <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseContext" role="button" aria-expanded="false" aria-controls="collapseContext" style="color: var(--midnight); background-color: var(--lime);">
        {{ context }}
    </a>
    </h5>
    <div class="collapse show" id="collapseContext">
    <div class="list-group ps-3 sticky-top sticky-offset" style="margin-left: -2em;">
        {{ collections.all | eleventyNavigation(context) | eleventyNavigationToHtml | safe }}
    </div>
    </div>
    <p class="fw-light">
    <a class="btn btn-primary btn-sm" data-bs-toggle="collapse" href="#collapseToc" role="button" aria-expanded="false" aria-controls="collapseToc" style="color: var(--midnight); background-color: var(--teal);">
        On this page
    </a>
    </p>
    <div class="collapse show" id="collapseToc">
    <div class="list-group ps-3 sticky-top sticky-offset" style="margin-left: -2em;">
        {{ content | toc | safe }}
    </div>
    </div> 
</div>   