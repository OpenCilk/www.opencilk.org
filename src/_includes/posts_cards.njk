<div class="row">
  {% for post in postslist | reverse %}
  <div class="col-sm-6 col-lg-4 mb-4">
    <div class="card">
      <img class="card-img-top p-2" src="{% if post.data.thumbnail %} {{ ['/img/', post.data.thumbnail] | join }} {% else %} /img/fib-nocode-trace-dag.png {% endif %}" style="max-height: 10em;">
      <div class="card-body bg-white">
        <a class="col mb-3 text-decoration-none" href="{{ post.url | url }}">
          <h5 class="card-title">{{ post.data.title }}</h5>
        </a>
        <p class="card-text">{{ post.data.excerpt }}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>